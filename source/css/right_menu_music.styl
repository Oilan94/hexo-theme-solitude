.right-menu .menu-content {
  * {
    -webkit-user-drag: none;
    box-sizing: border-box;
  }

  .player {
    padding-top: 12px;
    border-top: 1px solid var(--main-card-border);
    margin-top: 12px;

    .data {
      display: flex;
      flex-direction: column;
      align-items: center;

      span {
        width: 100%;
        padding: 0 8px;
        text-align: center;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .artist {
        font-size: 14px;
        margin-top: 4px;
        color: var(--main-font-second-color);
      }
    }

    .volume {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
      padding: 0 6px;
      margin-top: 1rem;
      width: 100%;

      .volume-slider {
        flex: 1;
        height: 4px;
        appearance: none;
        background: var(--main-font-second-color);
        border-radius: 2px;
        outline: none;
        margin: 0 10px;
        
        &::-webkit-slider-thumb {
          appearance: none;
          width: 12px;
          height: 12px;
          border-radius: 50%;
          background: var(--main-font-color);
          cursor: pointer;
          transition: all 0.3s ease;
        }
        
        &::-moz-range-thumb {
          width: 12px;
          height: 12px;
          border: none;
          border-radius: 50%;
          background: var(--main-font-color);
          cursor: pointer;
          transition: all 0.3s ease;
        }
      }
    }
  }
}
