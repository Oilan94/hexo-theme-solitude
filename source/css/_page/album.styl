/* 相册列表页面样式 */
#album
  .album-list
    display grid
    grid-template-columns repeat(4, 1fr)
    gap 1rem
    
    +maxWidth1300()
      grid-template-columns repeat(2, 1fr)
      gap 0.8rem
      
    +maxWidth768()
      grid-template-columns 1fr
      gap 0.6rem
    
    .album-item
      background var(--efu-card-bg)
      border var(--style-border-always)
      border-radius 12px
      padding 0
      transition 0.3s
      cursor pointer
      text-decoration none
      display flex
      flex-direction column
      height 100%
      overflow hidden
      
      &:hover
        box-shadow var(--efu-shadow-border-hover)
        border var(--style-border-hover)
        
      .album-item-cover
        width 100%
        height 250px
        overflow hidden
        
        img
          width 100%
          height 100%
          object-fit cover
          transition transform 0.3s
          
        &:hover img
          transform scale(1.05)
          
      .album-item-info
        padding 1rem 1rem 1rem 1rem
        
        .album-item-title
          font-size 1.1rem
          font-weight 600
          color var(--efu-fontcolor)
          margin-bottom 0.5rem
          
        .album-item-desc
          font-size 0.9rem
          color var(--efu-secondtext)
          line-height 1.5
          margin-bottom 0
          
      .album-item-meta
        display flex
        justify-content space-between
        align-items center
        padding 0 1rem 1rem 1rem
        font-size 0.8rem
        color var(--efu-secondtext)
        margin-top auto
        margin-bottom 0
        
        .album-item-count
          display flex
          align-items center
          gap 0.3rem
          
          i
            font-size 0.9rem
            color var(--efu-secondtext)
            
        .album-item-date
          display flex
          align-items center
          gap 0.3rem
          
          i
            font-size 0.9rem
            color var(--efu-secondtext)

/* 相册详情页面样式 */
#album_detail .type-gallery
  .gallery
    margin 1rem 0
    
    .fj-gallery
      .gallery-data
        display none
        
    .gallery-load-more
      background var(--efu-main)
      color var(--efu-white)
      border none
      border-radius 8px
      padding 0.8rem 1.5rem
      font-size 1rem
      cursor pointer
      transition all 0.3s ease
      margin 1rem auto
      display block
      
      &:hover
        background var(--efu-theme)
        transform translateY(-1px)

/* 时间线相册布局样式 - CSS Column模式 */
#album_detail .timeline
  width 100%

  ul.list
    column-count 4
    column-gap 0.5rem
    width 100%
    margin 0
    padding 0
    list-style none
    
    +maxWidth1400()
      column-count 4
      
    +maxWidth1300()
      column-count 3
      
    +maxWidth1000()
      column-count 2
      
    +maxWidth768()
      column-count 2
      
    +maxWidth600()
      column-count 1

  li.item
    position relative
    break-inside avoid
    border var(--style-border-always)
    border-radius 12px
    padding 0.5rem
    transition 0.3s
    display block
    background var(--efu-card-bg)
    margin-bottom 0.5rem
    box-shadow var(--efu-shadow-border)
    box-sizing border-box
    width 100%
      
    &:hover
      border var(--style-border-hover)
      box-shadow var(--efu-shadow-border-hover)
      
    .album-content
      width 100%
      display block
      
      .datacont
        font-size 0.8rem
        font-weight 700
        color var(--efu-fontcolor)
        width 100%
        line-height 1.38
        border-radius 12px
        margin-bottom 0.5rem
        display block
        text-align left
        
      .album-container-img
        display block
        width 100%
        
        .album-content-img
          display block
          width 100%
          overflow hidden
          border-radius 8px
          margin-bottom 0.5rem
          
          img
            width 100%
            height auto
            object-fit cover
            display block
            transition transform 0.3s
            border-radius 8px
            
          &:hover img
            transform scale(1.05)
            
    hr
      display flex
      position relative
      margin 8px 0
      border 1px dashed var(--efu-theme-op)
      width 100%
      
    .album-bottom
      display flex
      justify-content space-between
      align-items center
      border-top 1px solid var(--efu-border)
      width 100%
      
      .album-info
        display flex
        flex-wrap wrap
        gap 0.3rem
        align-items center
        flex 1
        
        .album-info-time,
        .album-info-address,
        .album-info-from
          display inline-flex
          align-items center
          gap 0.2rem
          padding 0.2rem 0.4rem
          border-radius 12px
          font-size 13px
          color var(--efu-fontcolor)
          transition all 0.3s ease
          /* background var(--efu-gray-op) */
          /*   
          &:hover
              background var(--efu-theme-op)
              color var(--efu-theme)
           */

          i
            font-size 0.8rem
            
      .album-reply
        cursor pointer
        margin 0 4px
        transition color 0.3s ease
        
        &:hover
          color var(--efu-main)

/* Gallery瀑布流样式 */
.gallery-container.waterfall
  column-count 4
  column-gap 1.5rem
  width calc(100% + 0.4rem)
  margin-left -0.1rem
  margin-right -0.1rem
  // 只增加0.5rem宽度，通过负margin抵消
  
  +maxWidth1400()
    column-count 4
    
  +maxWidth1300()
    column-count 3
    width calc(100% + 1rem)
    
  +maxWidth1000()
    column-count 2
    width calc(100% + 0.3rem)
    
  +maxWidth768()
    column-count 2
    
  +maxWidth600()
    column-count 1
    width calc(100% + 0.2rem)

  .gallery-item
    break-inside avoid
    border-radius 8px
    overflow hidden
    transition 0.3s
    width 24.97%
    padding 4px
    position relative
    
    +maxWidth1400()
      width 24.97%
      
    +maxWidth1300()
      width 32.97%
      
    +maxWidth1000()
      width 49.97%
      
    +maxWidth768()
      width 49.97%
      
    +maxWidth600()
      width 100%
    
    &:hover
      transform translateY(-2px)
      box-shadow var(--efu-shadow-border-hover)
    
    img
      width 100%
      height auto
      display block
      transition transform 0.3s
      
    &:hover img
      transform scale(1.05)
      
    .gallery-item-text
      display flex
      position absolute
      left 8px
      top 8px
      padding 4px 6px
      border-radius 8px
      background var(--efu-gray-op)
      font-size 12px
      color var(--efu-white)
      transition 0.3s
      z-index 1
      user-select none
      
    .gallery-item-address
      display flex
      position absolute
      left 8px
      top 8px
      padding 4px 6px
      border-radius 8px
      background rgba(0,0,0,0.2)
      font-size 11px
      color var(--efu-white)
      transition 0.3s
      z-index 1
      user-select none
      
    .gallery-reply
      position absolute
      right 8px
      bottom 8px
      width 32px
      height 32px
      border-radius 50%
      background var(--efu-gray-op)
      color var(--efu-white)
      display flex
      align-items center
      justify-content center
      cursor pointer
      transition 0.3s
      z-index 1
      user-select none
      
      &:hover
        background var(--efu-theme-op)
        color var(--efu-theme)
        transform scale(1.1)
        
      i
        font-size 14px
